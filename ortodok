ne:
COLOR 7, 0: CLS : WIDTH 40
LOCATE 11, 12: PRINT "Какой тэмп 1-9 ?"
f$ = INPUT$(1)
IF ASC(f$) < 49 OR ASC(f$) > 57 THEN GOTO ne
temp = 100 * VAL(f$)
LOCATE 11, 8: PRINT "1-{ЛАТ} и {РУС},2- {РУС}"
rrr:
f$ = INPUT$(1): IF ASC(f$) <> 50 AND ASC(f$) <> 49 THEN GOTO rrr
dt = ASC(f$)
WIDTH 80
GOSUB ram
RANDOMIZE TIMER - 4000
LOCATE 1, 30: PRINT "Клавиатурный тренажор."
LOCATE 3, 34: PRINT "Вpемя ="
LOCATE 5, 37: PRINT "▓▓▓▓▓▓▓"
LOCATE 6, 37: PRINT "▓     ▓"
LOCATE 7, 37: PRINT "▓     ▓"
LOCATE 8, 37: PRINT "▓     ▓"
LOCATE 9, 37: PRINT "▓▓▓▓▓▓▓"
LOCATE 11, 37: PRINT "Попытки"
COLOR 3
LOCATE 12, 15: PRINT "┌───────────────────────────────────────────────────┐"
LOCATE 13, 15: PRINT "│███████████████████████████████████████████████████│"
LOCATE 14, 15: PRINT "└───────────────────────────────────────────────────┘"
COLOR 7: LOCATE 15, 38: PRINT "Ошибки": COLOR 3
LOCATE 16, 15: PRINT "┌───────────────────────────────────────────────────┐"
LOCATE 17, 15: PRINT "│███████████████████████████████████████████████████│"
LOCATE 18, 15: PRINT "└───────────────────────────────────────────────────┘"
COLOR 7
FOR s = 1 TO 51
LOCATE 13, 16: PRINT STRING$(s, "█")
ge:
IF dt = 50 THEN ac = 128 + (RND(1) * 111): GOTO ggg
ac = 33 + (RND(1) * 181)
ggg:
IF (ac > 122 AND ac < 128) OR (ac > 176 AND ac < 224) THEN GOTO ge
IF ac > 64 AND ac < 123 THEN LOCATE 7, 28: PRINT "{ ЛАТ }": GOTO 10
LOCATE 7, 28: PRINT "{ РУС }"
10 bu$ = CHR$(ac)
LOCATE 7, 40: PRINT bu$
FOR t = 1 TO temp: d$ = INKEY$: LOCATE 3, 41: PRINT temp - t: IF d$ <> "" THEN EXIT FOR
NEXT t
IF d$ = "" THEN GOTO lul
IF ASC(d$) = 27 THEN GOTO menu
lul:
IF d$ = bu$ THEN pra = pra + 1 ELSE BEEP
LOCATE 19, 32: PRINT "Качественность ="; pra / s * 100; "              "
LOCATE 17, 16: PRINT STRING$(s - pra, "█")
NEXT s:
Music$ = "MBT180o2P2P8L8GGGL2E-P24P8L8FFFL2D"
PLAY Music$
WHILE PLAY(0) > 2: WEND
ty$ = INPUT$(1)
GOTO menu

snom:
w = 0: o = 0
COLOR 7, 0: CLS : g = 1: j = 1
RANDOMIZE TIMER - 4000
GOSUB ram
wind = INT(RND(1) * 2 + .5): ON wind GOSUB 333, 111
COLOR 2, 7: LOCATE 1, 28: PRINT "Набор за минуту": COLOR 7, 0
LOCATE 4
FOR i = 1 TO 9
LOCATE i + 3, 3: PRINT a$(i): NEXT i
COLOR 0, 7: LOCATE 4, 3: PRINT MID$(a$(1), 1, 1): COLOR 7, 0
tim = TIMER
DO UNTIL tim + 60 <= TIMER
30 COLOR 4: LOCATE 23, 20: PRINT "Буква:"; w; "           Ошибки:"; o: h$ = INPUT$(1)
IF ASC(h$) = 27 THEN GOTO menu
IF MID$(a$(g), j, 1) = h$ THEN j = j + 1: w = w + 1 ELSE 35
IF j > LEN(a$(g)) THEN LOCATE 3 + g, j + 1: PRINT MID$(a$(g), j - 1, 1) ELSE 40
 j = 1: g = g + 1: COLOR 1, 7: LOCATE 3 + g, j + 2: PRINT MID$(a$(g), j, 1): COLOR 7, 0: GOTO de
35  BEEP: o = o + 1: GOTO 30
40 COLOR 1, 7: LOCATE 3 + g, j + 2: PRINT MID$(a$(g), j, 1): COLOR 7, 0
LOCATE 3 + g, j + 1: PRINT h$
de:
LOOP:
Music$ = "MBT180o2P2P8L8GGGL2E-P24P8L8FFFL2D"
PLAY Music$
WHILE PLAY(0) > 2: WEND
ty$ = INPUT$(1)
GOTO menu

upra:
COLOR 7, 0: fgg = h - 3: CLS : g = 1: j = 1
GOSUB ram
ON fgg GOSUB upr, uprr, uprrr, uprrrr
LOCATE 1, 5: PRINT na$(fgg)
LOCATE 4
FOR i = 1 TO dl
h$ = ""
LOCATE , 8: PRINT a$(i):  NEXT i
COLOR 0, 7: LOCATE 4, 8: PRINT MID$(a$(1), 1, 1): COLOR 7, 0
DO UNTIL h$ = CHR$(27)
130 h$ = INPUT$(1)
IF ASC(h$) = 27 THEN GOTO menu
IF MID$(a$(g), j, 1) = h$ THEN j = j + 1 ELSE 135
IF j > LEN(a$(g)) THEN LOCATE 3 + g, j + 6: PRINT MID$(a$(g), j - 1, 1) ELSE 140
 j = 1: g = g + 1: COLOR 1, 7: LOCATE 3 + g, j + 7: PRINT MID$(a$(g), j, 1): COLOR 7, 0: GOTO ds

135 LOCATE 3 + g, j + 7: PRINT MID$(a$(g), j, 1)
j = 1: BEEP: o = o + 1: COLOR 1, 7: LOCATE 3 + g, j + 7: PRINT MID$(a$(g), j, 1): COLOR 7, 0: GOTO ds
140 COLOR 1, 7: LOCATE 3 + g, j + 7: PRINT MID$(a$(g), j, 1): COLOR 7, 0
LOCATE 3 + g, j + 6: PRINT h$
ds:
IF dl < g THEN GOTO menu
LOOP: GOTO menu

